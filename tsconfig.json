{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "typeRoots": ["./types", "./node_modules/@types"], // 보통 types 폴더를 만들어 타입 정의
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "./dist"]
}
